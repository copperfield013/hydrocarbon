<script id="ks-criterias">
	{{each(i, criteria) ks.criterias}}
		<div class="row" style="margin-top:5px">
			<label class="control-label col-lg-2 col-lg-offset-1">${criteria.name}</label>
			<div class="col-lg-7">
				<input on-change="do:triggerCriteriaChange(ks.criterias[${i}])" class="form-control col-lg-4" type="text"/>
			</div>
		</div>
	{{/each}}

</script>